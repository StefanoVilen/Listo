{
  "expo": {
    "name": "Listo",
    "slug": "listo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "listo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "infoPlist": { "UIBackgroundModes": ["fetch"] }
    },

    "android": {
      "icon": "./assets/icon.png",
      "edgeToEdgeEnabled": true
    },

    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ]
  }
}
